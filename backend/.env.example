# API Keys
NEWS_API_KEY=your_newsapi_key_here
NYT_API_KEY=your_nyt_api_key_here
GUARDIAN_API_KEY=your_guardian_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=5000
HOST=0.0.0.0
DEBUG=True  # Set to False in production
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# Database Configuration (if needed in the future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=newsagent
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Cache Configuration
CACHE_DURATION=1800  # Cache duration in seconds (30 minutes)
CACHE_TYPE=simple  # Options: simple, redis

# Redis Configuration (if using redis cache)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# CORS Settings
CORS_ALLOW_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_FILE=news_agent.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s